<h1>Editing <%= @student.first_name %> <%= @student.last_name %></h1>

<form action = "/dojos/<%= @dojo.id %>/students/<%= @student.id %>" method="post">
	<input type="hidden" name="_method" value="patch">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <div class="form-group">
    <label for="first_name">First Name:</label>
    <input type="text" class="form-control" name="first_name" value="<%= @student.first_name %>"placeholder="First Name">
  </div>
  <div class="form-group">
    <label for="street">Last Name:</label>
    <input type="text" class="form-control" name="last_name" value="<%= @student.last_name %>"placeholder="Last Name">
  </div>
  <div class="form-group">
    <label for="city">Email:</label>
    <input type="text" class="form-control" name="email" value="<%= @student.email %>" placeholder="Email">
  </div>
  <div>
  	<select name="student_id">
  		<option value="<%= @dojo.id %>"><%= @dojo.branch %> </option>
  	
  	<% @all_dojos.each do |dojo| %>
  		<option value="<%= dojo.id %>"><%= dojo.branch %> </option>
  	<% end %>
  	</select>

  </div>

  <div>
  <button type="submit" value = "Update Student" class="btn btn-primary">Update</button>
  </div>
</form>

<a href="/dojos">Home</a> | <a href="/dojos/<%= @dojo.id %>/students/<%= @student.id %>"><%= @student.first_name %></a>
